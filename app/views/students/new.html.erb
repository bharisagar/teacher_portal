<title>Add New Student</title>
<div class="edit-student-container">
    <h1>Add New Student</h1>
    <%= form_with(model: @student, local: true) do |form| %>
        <div class="form-group">
            <%= form.label :name, class: "form-label" %>
            <%= form.text_field :name, required: true, class: "form-input", placeholder: "Enter student name" %>
        </div>
        <div class="form-group">
            <%= form.label :subject, class: "form-label" %>
            <%= form.text_field :subject, required: true, class: "form-input", placeholder: "Enter subject" %>
        </div>
        <div class="form-group">
            <%= form.label :marks, class: "form-label" %>
            <%= form.number_field :marks, required: true, class: "form-input", placeholder: "Enter marks" %>
        </div>
        <%= form.submit "Add Student", class: "btn" %>
    <% end %>
    <%= link_to "Back to Student List", students_path, class: "back-link" %>
</div>
